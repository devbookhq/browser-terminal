{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": false,
    "jsxFactory": "h",
    "jsxFragmentFactory": "",
    "noEmit": true
  },
  "include": [
    "src",
    "src/**/*",
    "declaration.d.ts"
  ],
  "exclude": [
    "src/background.ts",
    "**/tests/**"
  ]
}
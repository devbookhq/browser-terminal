{
  "name": "Devbook Browser Terminal",
  "description": "Bring your local terminal to any website",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Click to add terminal"
  },
  "background": {
    "service_worker": "dist/background.mjs"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": ["http://localhost:8010/*"],
  "content_security_policy": {
    "extension_pages": "script-src http://localhost;  object-src http://localhost;"
  }
}